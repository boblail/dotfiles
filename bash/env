# for configuring environment: paths, etc

# path
export PATH=~/Me/bin:/usr/local/bin:/usr/local/sbin:/usr/local/mysql/bin:$PATH

# macports
export PATH=/opt/local/bin:/opt/local/sbin:$PATH

# RVM
if [[ -s "$HOME/.rvm/scripts/rvm" ]] ; then source "$HOME/.rvm/scripts/rvm" ; fi

# grep
export GREP_OPTIONS='--color=auto'
export GREP_COLOR='1;32'

# update Terminal window title
PROMPT_COMMAND='echo -ne "\033]0;${PWD/#$HOME/~} (${USER}@${HOSTNAME%%.*})"; echo -ne "\007"'
