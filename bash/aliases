# shortuts
#

# 
alias h="history"
alias ..="cd .."
alias l="ls -al"

# rails
function ss() {
  ./script/server $*
}
function sc() {
  ./script/server $*
}
alias mig="rake db:migrate db:test:clone"
alias rst="touch tmp/restart.txt"

# git
function g() {
  git checkout $*
}
alias s="git status"
alias ga="git add ."
alias gd="git diff"
function gm() {
  git merge $*
}
alias amend="git commit --amend"
function gp() {
  git push $* --tags
}
function gu() {
  git pull $* --tags
}
function gbranch() {
  current_branch=$(git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/\1/')
}
function gpo() {
  # pushes the current branch; whatever that is
  gbranch
  gp origin $current_branch
}
function guo() {
  # pushes the current branch; whatever that is
  gbranch
  gu origin $current_branch
}
function gpom() {
  gp origin master
}
function guom() {
  gu origin master
}
function gc() {
  git commit -a -m $1
}
function gchk() {
  git checkout $*
}
function gb() {
  git checkout -b $*
}
alias gl="git log"

# mysql
alias m="mysql"

# commands
alias aps="cd /var/www/apps"
alias htm="cd /var/www/html"
alias alr=". ~/Me/bash/aliases"
alias _al="$EDITOR ~/Me/bash/aliases && alr"
alias _me="$EDITOR ~/Me"