#
# shortuts
#

# 
alias h="history"
alias ..="cd .."
alias l="ls -al"

# rails
alias ss="./script/server"
alias sc="./script/console"
alias mig="rake db:migrate db:test:clone"
alias rst="touch tmp/restart.txt"

# git
alias ga="git add ."
alias s="git status"
alias gd="git diff"
alias amend="git commit --amend"
function gp() {
  git push $* --tags
}
function gpo() {
  git push origin $* --tags
}
alias gpom="git push origin master"
function gc() {
  git commit -a -m "$1"
}
function gchk() {
  git checkout $*
}
function gb() {
  git checkout -b $*
}
alias gl="git log"

function test() {
  cat $*
}

# commands
alias aps="cd /var/www/apps"
alias htm="cd /var/www/html"
alias alr=". ~/Me/bash/aliases"
alias _al="$EDITOR ~/Me/bash/aliases && alr"
alias _me="$EDITOR ~/Me/bash"